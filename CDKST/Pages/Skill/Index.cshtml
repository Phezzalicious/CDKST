@page
@model CDKST.Pages.Skill.IndexModel

@{
    
    var count = 1;
}
 <header class="skillhead">
    <div class="container d-flex h-100 align-items-center">
      <div class="mx-auto text-center">
        <h1 class="mx-auto my-0 text-uppercase">Skill Levels </h1>
        <h2 class ="mx-auto my-0 text-center">Bloom</h2>
    </div>
    </div>
  </header>
 <section id="skill" class="skill-section">

<div class="text-center">
    <table class="table table-hover table-striped text-white">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                 <th scope="col">Category</th>
                <th scope="col">Description</th>
               
            </tr>
        </thead>

        <tbody>
            @foreach (var skill in Model.SkillLevelList)
            {
                <tr>
                    <th scope="row">@count</th>
                    <td>@skill.term_identifier</td>
                    <td>@skill.cartesian_index</td>
                    <td>@skill.descriptor</td>
                </tr>
                { count++; }
            }
        </tbody>
    </table>
</div>

  </section>



    



  
